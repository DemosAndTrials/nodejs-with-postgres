<html>

<head>
    <title>Signup page</title>
    <% include ../../partials/head %>
</head>

<body>
    <section class="stage slds-grid slds-grid--vertical slds-nowrap">
        <header>
            <% include ../../partials/header %>
        </header>

        <div class="slds-shrink-none">
            <div class="slds-page-header">
                <h2 class="slds-text-heading--medium">Signup</h2>
            </div>
        </div>

        <div class="slds-form slds-form_stacked slds-grid slds-grid_align-center slds-m-top_medium">
            <div class="slds-card slds-col slds-size_2-of-6">

                <form autocomplete="off" action="#" action="user/signup" method="post"
                    class="slds-m-around_small" role="form">
                    <div class="slds-form-element">
                        <label class="slds-form-element__label" for="name">First name</label>
                        <div class="slds-form-element__control">
                            <% if(errors){ %>
                            <label th:if="${#fields.hasErrors('name')}" th:errors="*{name}" class="validation-message"></label>
                            <%}%> 
                            <input type="text" id="name" name="name" placeholder="Name" class="slds-input" value="<%= user.name %>"/>
                        </div>
                    </div>

                    <div class="slds-form-element">
                        <label class="slds-form-element__label" for="lastname">Last name</label>
                        <div class="slds-form-element__control">
                            <label th:if="${#fields.hasErrors('lastName')}" th:errors="*{lastName}" class="validation-message"></label>
                            <input type="text" id="lastname" name="lastname" placeholder="Last Name" class="slds-input" value="<%= user.lastname %>"/>
                        </div>
                    </div>
                    <div class="slds-form-element">
                        <label class="slds-form-element__label" for="email">Email</label>
                        <div class="slds-form-element__control">
                            <input type="text" id="email" name="email" placeholder="Email" class="slds-input" />
                            <label th:if="${#fields.hasErrors('email')}" th:errors="*{email}" class="validation-message"></label>
                        </div>
                    </div>
                    <div class="slds-form-element">
                        <label class="slds-form-element__label" for="password">Password</label>
                        <div class="slds-form-element__control">
                            <input type="password" id="password" name="password" placeholder="Password" class="slds-input" />
                            <label th:if="${#fields.hasErrors('password')}" th:errors="*{password}" class="validation-message"></label>
                        </div>
                    </div>

                    <div class="slds-form-element">
                        <button type="submit" class="slds-button slds-button_brand">Register</button>
                    </div>

                    <!--<span th:utext="${successMessage}"></span>-->
                    <hr class="slds-m-around_x-small">
                    <a href="/user/login">Login</a>

                </form>

            </div>
        </div>

        <footer>
            <% include ../../partials/footer %>
        </footer>
    </section>
</body>

</html>