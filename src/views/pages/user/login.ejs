<html>

<head>
    <title>Login page</title>
    <% include ../../partials/head %>
</head>

<body>
    <section class="stage slds-grid slds-grid--vertical slds-nowrap">
        <!-- header -->
        <header>
            <% include ../../partials/header %>
        </header>
        <!-- title -->
        <div class="slds-shrink-none">
            <div class="slds-page-header">
                <h2 class="slds-text-heading--medium">Login</h2>
            </div>
        </div>
        <!-- body -->
        <div class="slds-form slds-form_stacked slds-grid slds-grid_align-center slds-m-top_medium">
                <div class="slds-card slds-col slds-size_2-of-6">
        
                    <form th:action="/user/login" method="POST" class="slds-m-around_small">
        
                        <div class="slds-form-element">
                            <label class="slds-form-element__label" for="email">Username</label>
                            <div class="slds-form-element__control">
                                <input type="text" id="email" name="email" class="slds-input" th:placeholder="Username"/>
                            </div>
                        </div>
                        <div class="slds-form-element">
                            <label class="slds-form-element__label" for="password">Password</label>
                            <div class="slds-form-element__control">
                                <input type="password" id="password" name="password" class="slds-input" th:placeholder="Password"/>
                            </div>
                        </div>
        
                        <div align="center" th:if="${param.error}">
                            <p style="color: #FF1C19;">Email or Password invalid, please verify</p>
                        </div>
                        <div class="slds-form-element">
                            <button class="slds-button slds-button_brand" type="Submit">Login</button>
                        </div>
                        <hr class="slds-m-around_x-small">
                        <a href="/user/signup">Registration</a>
                    </form>
                </div>
            </div>
        <!-- footer -->
        <footer>
            <% include ../../partials/footer %>
        </footer>
    </section>
</body>

</html>